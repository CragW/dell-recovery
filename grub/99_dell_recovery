#!/bin/bash -e

source /usr/lib/grub/grub-mkconfig_lib

cat << EOF
menuentry "Restore #OS# to factory state" {
	linux	(hd0,#PARTITION#)/casper/vmlinuz preseed/file=/cdrom/preseed/ubuntu.seed boot=casper automatic-ubiquity noprompt quiet splash dell-recovery/recovery_type=hdd
	initrd	(hd0,#PARTITION#)/casper/initrd.lz
}
EOF

